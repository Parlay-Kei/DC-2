#===============================================================================
# Direct Cuts - Fastlane Environment Variables
#===============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
#
# For CI/CD, set these as secrets in your CI system.
#===============================================================================

#-------------------------------------------------------------------------------
# iOS Configuration (App Store Connect)
#-------------------------------------------------------------------------------

# Apple Developer Account Email
APPLE_ID=developer@direct-cuts.com

# Apple Developer Team ID (10 character string)
# Find at: https://developer.apple.com/account/#/membership
APPLE_TEAM_ID=XXXXXXXXXX

# App Store Connect API Key ID
# Create at: App Store Connect > Users and Access > Keys
APP_STORE_CONNECT_API_KEY_ID=ABC123DEFG

# App Store Connect API Issuer ID
# Found at: App Store Connect > Users and Access > Keys
APP_STORE_CONNECT_API_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# App Store Connect API Key Content (Base64 encoded .p8 file)
# Generate with: base64 -i AuthKey_KEYID.p8 | tr -d '\n'
APP_STORE_CONNECT_API_KEY_CONTENT=LS0tLS1CRUdJTi...BASE64_ENCODED_KEY...

# App Store Connect Team ID (for accounts with multiple teams)
# Find in URL when logged into App Store Connect
ITC_TEAM_ID=123456789

#-------------------------------------------------------------------------------
# iOS Code Signing (Match)
#-------------------------------------------------------------------------------

# Git repository URL for Match certificates
# Should be a private repo with deploy key access
MATCH_GIT_URL=git@github.com:directcuts/ios-certificates.git

# Match encryption password
# Used to encrypt/decrypt certificates in the repo
MATCH_PASSWORD=your-secure-encryption-password

# Keychain name (for CI environments)
# MATCH_KEYCHAIN_NAME=fastlane_keychain

# Keychain password (for CI environments)
# MATCH_KEYCHAIN_PASSWORD=

# Read-only mode (recommended for CI)
# Set to "true" to prevent Match from modifying certificates
MATCH_READONLY=true

#-------------------------------------------------------------------------------
# Android Configuration (Google Play)
#-------------------------------------------------------------------------------

# Path to Google Play service account JSON key
# Download from: Google Cloud Console > IAM > Service Accounts
GOOGLE_PLAY_JSON_KEY=/path/to/google-play-service-account.json

# Or, for CI/CD, use the JSON content directly (Base64 encoded)
# GOOGLE_PLAY_JSON_KEY_CONTENT=eyJ0eXBlIjoi...BASE64_ENCODED_JSON...

#-------------------------------------------------------------------------------
# Android Signing (if not using key.properties)
#-------------------------------------------------------------------------------

# Path to Android release keystore
# ANDROID_KEYSTORE_PATH=/path/to/release.keystore

# Keystore password
# ANDROID_KEYSTORE_PASSWORD=your-keystore-password

# Key alias in keystore
# ANDROID_KEY_ALIAS=direct-cuts-release

# Key password
# ANDROID_KEY_PASSWORD=your-key-password

#-------------------------------------------------------------------------------
# Build Configuration
#-------------------------------------------------------------------------------

# OneSignal App ID for push notifications
# Get from: OneSignal Dashboard > Settings > Keys & IDs
ONESIGNAL_APP_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Mapbox access token for maps
# Get from: Mapbox Dashboard > Account > Access Tokens
MAPBOX_ACCESS_TOKEN=pk.eyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

#-------------------------------------------------------------------------------
# Optional: Slack Integration
#-------------------------------------------------------------------------------

# Slack webhook URL for deployment notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Slack channel for notifications
# SLACK_CHANNEL=#mobile-deployments

#-------------------------------------------------------------------------------
# Optional: Firebase (if using Firebase App Distribution)
#-------------------------------------------------------------------------------

# Firebase CLI token
# Generate with: firebase login:ci
# FIREBASE_TOKEN=1//xxxxxxxxxxxxx

# Firebase App ID (iOS)
# FIREBASE_APP_ID_IOS=1:123456789:ios:abc123

# Firebase App ID (Android)
# FIREBASE_APP_ID_ANDROID=1:123456789:android:abc123

#-------------------------------------------------------------------------------
# Debugging
#-------------------------------------------------------------------------------

# Enable verbose output
# FASTLANE_VERBOSE=true

# Skip CI detection (force CI behavior)
# CI=true
